<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#010101">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_header"
        android:background="#1A627B">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Hauptmenu"
            android:id="@+id/lbl_mainmenu"
            android:fontFamily="sans-serif"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            android:textColor="#93D7F5" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/layout_header"
            android:id="@+id/add_salesslip">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imgButton_add"
                android:src="@mipmap/add_plus"
                android:baselineAlignBottom="false"
                android:scaleType="fitCenter"
                android:background="#1A627B" />

            <ImageButton
                android:layout_marginLeft="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imgBtn_cashup"
                android:src="@mipmap/android_btn_dollar_klein"
                android:baselineAlignBottom="false"
                android:scaleType="fitCenter"
                android:background="#1A627B" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Neuen Kassenzettel\nhinzufügen"
                android:singleLine="false"
                android:id="@+id/text_add"
                android:textSize="10dp"
                android:gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#99D9F5" />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Neuen Kassenzettel\nhinzufügen"
                android:singleLine="false"
                android:id="@+id/text_cashup"
                android:textSize="10dp"
                android:gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#99D9F5"
                android:phoneNumber="false" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_information_header"
        android:layout_below="@id/layout_header"
        android:background="#93D7F5"
        android:gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Allgemeine Informationen"
            android:id="@+id/text_alg.info"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout4"
            android:layout_below="@id/layout_header"
            android:background="#93D7F5">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Anzahl offener Kassenzettel"
                android:id="@+id/text_slipcount"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout5"
            android:layout_below="@id/layout_header"
            android:background="#93D7F5"
            android:baselineAligned="false">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0"
                android:id="@+id/text_valueslipcount"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textIsSelectable="false"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_information_header">

        <ListView
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="#93D7F5" />
    </LinearLayout>

</RelativeLayout>
